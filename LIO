oid loop()
{
 Motor_Move(2000, 2000, 2000, 2000); //go forward
 delay(1000);
 Motor_Move(0, 0, 0, 0); //stop
 delay(1000);
 Motor_Move(-2000, -2000, -2000, -2000); //go back
 delay(1000);
 Motor_Move(0, 0, 0, 0); //stop
 delay(1000);
 Motor_Move(-2000, -2000, 2000, 2000); //turn left
 delay(1000);
 Motor_Move(0, 0, 0, 0); //stop
 delay(1000);
 Motor_Move(2000, 2000, -2000, -2000); //turn right
 delay(1000);
 Motor_Move(0, 0, 0, 0); //stop
 delay(1000);
}
